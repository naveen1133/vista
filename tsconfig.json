{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "types": ["cypress"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist"
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cypress/**/*.js",
    "cypress/reports",
    "**/*.json"
  ]
}
